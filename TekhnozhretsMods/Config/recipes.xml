			<ingredient name="foodWhatAFishSmoked" count="5"/>
			<ingredient name="foodCropCorn" count="2"/>
			<ingredient name="foodCropYuccaFruit" count="3"/>
			<ingredient name="foodCornMeal" count="1"/>
			<ingredient name="foodCanChili" count="3"/>
